{% extends 'admin/baseAdmin.html.twig' %}

{% block title %}Messages
{% endblock %}

{% block body %}


	<div
		class="content-body">
		<!-- row -->
		<div class="container-fluid">
			<div class="row">
				<div class="col-xl-9 col-xxl-12">
					<div class="row">

						<div class="col-xl-12 col-xxl-12 col-lg-12 col-md-12">
							<div class="card">
								<div class="card-header border-0 pb-0">
									<h4 class="card-title">Demande de contact</h4>

								</div>
                <div class="card-header border-0 pb-2">
                    <a id="btn-create" class="btn btn-success btn-block" type="button" href="{{ path('admin_messages_list') }}"> Retour Ã  tout les messages</a>
                </div>

								<div class="card-body">
									<div class="row old-mail">
										<div class="col-lg-10">
											<strong>De:
											</strong>{{ message.email }},
											<strong>le
											</strong>
											<span>{{ message.createdAt|date('d/m/Y H:i') }}</span>
										</div>
										<div class="col-lg-10">
											<strong>Nom:
											</strong>{{ message.name }}<br>
											<strong>Message:</strong><br>
											{{ message.message|nl2br }}
											<br>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>


{% endblock %}
